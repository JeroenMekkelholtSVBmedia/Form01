<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :hint => 'You cannot change your username.'  %>
    <%= f.input :title, :hint => 'You cannot change your username.'  %>
    <%= f.input :content, :hint => 'You cannot change your username.' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
